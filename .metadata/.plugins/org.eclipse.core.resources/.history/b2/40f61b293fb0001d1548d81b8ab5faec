package lv_0;
import java.util.*;

public class EvenOrOdd {

	public static void main(String[] args) {
		int[] num_list = {1, 2, 3, 4, 5};
		
		int[] a = {};
		
		int[] answer = Arrays.copyOf(a, a.length + 2);
		
		System.out.println(Arrays.toString(answer));
        
        
		int even = 0;
		int odd = 0;
		
		for(int i = 0; i < num_list.length; i += 1) {
			if (num_list[i] % 2 == 0) {
			  even += 1;
			} else {
			  odd += 1;
			}
		}
        
        answer[a.length + 0] = even;
        answer[a.length + 1] = odd;
   
		
	}

}
