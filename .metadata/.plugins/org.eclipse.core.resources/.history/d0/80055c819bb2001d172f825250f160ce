package lv_0;

import java.util.Arrays;

public class 배열자르기 {

	public static void main(String[] args) {
		int[] numbers = {1,3,5};
		int num1 = 1;
		int num2 = 2;
		int a = 0;

	    int[] answer = new int[num2 - num1 + 1];
	    
	    for(int i = num1; i <= num2; i += 1) {
	    	answer[a] = numbers[i];
	    	a += 1;	    	
	    }
	    
	    System.out.println(Arrays.toString(answer));
	}

}

//java.util.*; 이용하면, Arrays.copyOfRange 이용할 수 있음
//Arrays.copyOfRange(복사하고자하는 배열, 시작 위치, 배열크기); or  Arrays.copyOfRange(복사하고자하는 배열, 배열크기);
//주의) 범위 설정 시, 3이라고 지정해주면 2까지 복사하니 주의


public static void main(String[] args) {
	int[] numbers2 = {1,3,5};
	int number1 = 1;
	int number2 = 2;

    int[] answer = {};
    
    answer = Arrays.copyOfRange(numbers2, number1, number2 + 1);
    
    System.out.println(Arrays.toString(answer));
}

}